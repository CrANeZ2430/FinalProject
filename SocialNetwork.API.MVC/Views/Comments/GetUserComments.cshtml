@using SocialNetwork.API.MVC.Models.ViewModels
@model IEnumerable<CommentViewModel>

@{
    ViewData["Title"] = "User Comments";
}

<div class="container mt-5">
    <h2 class="text-primary fw-bold mb-4 text-center">@ViewData["Title"]</h2>

    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var comment in Model)
            {
                <div class="col">
                    <div class="card shadow-sm h-100 border-0 rounded-4">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex align-items-start gap-3 mb-3">
                                <img src="@Url.Action("ProxyImage", "Utilities", new { url = comment.User.ProfilePicturePath })"
                                     alt="Profile" 
                                     class="rounded-circle" 
                                     style="width: 50px; height: 50px; object-fit: cover;" />
                                <div>
                                    <strong>@comment.User.UserName</strong>
                                    <small class="text-muted d-block">
                                        <i class="bi bi-clock me-1"></i>@comment.CreationTime.ToString("g")
                                    </small>
                                </div>
                            </div>
                            <p class="card-text mb-3">@comment.Content</p>
                            <div class="d-flex align-items-center gap-2">
                                <span class="badge bg-success d-flex align-items-center">
                                    <i class="bi bi-hand-thumbs-up me-1"></i>@comment.LikeCount
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">This user hasn't posted any comments yet.</div>
    }
</div>



